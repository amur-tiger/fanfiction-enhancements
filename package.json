{
  "name": "fanfiction-enhancements",
  "version": "0.7.4",
  "author": "Arne 'TigeR' Linck",
  "description": "FanFiction.net Enhancements",
  "license": "MIT",
  "homepage": "https://github.com/amur-tiger/fanfiction-enhancements",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NekiCat/fanfiction-enhancements.git"
  },
  "bugs": {
    "url": "https://github.com/amur-tiger/fanfiction-enhancements/issues"
  },
  "keywords": [
    "userscript",
    "fanfiction"
  ],
  "main": "fanfiction-enhancements.user.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{css,ts,tsx}\"",
    "lint": "eslint --color src",
    "test": "run-p test:*",
    "test:unit": "jest src --coverage",
    "test:types": "tsc --noEmit",
    "build": "ts-node-script scripts/build.ts",
    "watch": "ts-node-script scripts/build.ts --watch",
    "serve": "ts-node-script scripts/build.ts --serve",
    "clean": "rimraf target"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "ffn-parser": "^0.0.6",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/greasemonkey": "^4.0.4",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "esbuild": "^0.18.17",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-import": "^2.28.0",
    "ignore-styles": "^5.0.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/config/css-stub.ts",
      "^.+\\.(svg)$": "<rootDir>/config/svg-stub.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/*.spec.ts",
      "!src/**/*.spec.tsx"
    ]
  }
}
