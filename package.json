{
  "name": "fanfiction-enhancements",
  "version": "0.7.3",
  "author": "Arne 'TigeR' Linck",
  "description": "FanFiction.net Enhancements",
  "license": "MIT",
  "homepage": "https://github.com/amur-tiger/fanfiction-enhancements",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NekiCat/fanfiction-enhancements.git"
  },
  "bugs": {
    "url": "https://github.com/amur-tiger/fanfiction-enhancements/issues"
  },
  "keywords": [
    "userscript",
    "fanfiction"
  ],
  "main": "fanfiction-enhancements.user.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --color src",
    "test": "run-p test:*",
    "test:unit": "jest src --coverage",
    "test:types": "tsc --noEmit",
    "build": "ts-node-script scripts/build.ts",
    "watch": "ts-node-script scripts/build.ts --watch",
    "clean": "rimraf target"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "ffn-parser": "^0.0.6",
    "jszip": "^3.7.1"
  },
  "devDependencies": {
    "@types/greasemonkey": "^4.0.2",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "ignore-styles": "^5.0.1",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/config/css-stub.ts",
      "^.+\\.(svg)$": "<rootDir>/config/svg-stub.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/*.spec.ts",
      "!src/**/*.spec.tsx"
    ]
  }
}
